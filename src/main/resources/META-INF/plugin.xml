<idea-plugin>
    <id>com.github.fisherman08.Idea-WebSocket</id>
    <name>WebSocket Client</name>
    <vendor url="https://github.com/fisherman08/Idea-WebSocket">fisherman08</vendor>

    <description><![CDATA[
    A simple WebSocket client for IntelliJ platform
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="WebSocket" anchor="bottom"
                    factoryClass="com.github.fisherman08.idea_websocket.platform.WebSocketToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
